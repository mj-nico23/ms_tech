@model IEnumerable<ms_tech.Models.Estados>
@using PagedList.Mvc;
@using ms_tech.Helpers;

@{
    ViewBag.Title = "Estados de Incidentes";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.IconButton("Nuevo Estado", "Create", "Estados", null, null, "")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finalizado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @(item.Activo ? "Si" : "No")
        </td>
        <td>
            @(item.Finalizado ? "Si" : "No")
        </td>
        <td>
            @Html.ImageActionLink("Editar", "Edit", "Estados", new { id = item.IdEstado }, null) |
            @Html.ImageActionLink("Detalles", "Details", "Estados", new { id = item.IdEstado }, null) |
            @Html.ImageActionLink("Eliminar", "Delete", "Estados", new { id = item.IdEstado }, null)
        </td>
    </tr>
}

</table>
