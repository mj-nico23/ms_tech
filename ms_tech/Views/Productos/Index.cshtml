@model IEnumerable<ms_tech.Models.Productos>

@{
    ViewBag.Title = "Lista de Productos";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nuevo Producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdProducto }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdProducto }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.IdProducto })
        </td>
    </tr>
}

</table>
